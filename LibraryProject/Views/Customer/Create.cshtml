@model LibraryManagement.ViewModel.CustomerViewModel

<h2>Create Customer</h2>

<form asp-controller="Customer" asp-action="Create" method="post">

    <div class="row">
        <div class="col">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="col">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label asp-for="Birthday"></label>
            <input asp-for="Birthday" class="form-control" />
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>

        <div class="col">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="col">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>


    <div class="row">
        <div class="col">
            <label asp-for="MembershipSince"></label>
            <input asp-for="MembershipSince" class="form-control" />
            <span asp-validation-for="MembershipSince" class="text-danger"></span>
        </div>

        <div class="col">
            <label class="mr-sm-2" for="inlineFormCustomSelect">Student?</label>
            <select asp-for="Student" class="custom-select mr-sm-2">
                <option value="True">Yes</option>
                <option value="False">No</option>
            </select>
        </div>

         <div class="col">
            <label class="mr-sm-2" for="inlineFormCustomSelect">Genre</label>
            <select asp-for="Genre" class="custom-select mr-sm-2">
                <option value="M">Masculine</option>
                <option value="F">Femenine</option>
            </select>
        </div>
    </div>


    <br>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Create</button>
        <button type="reset" class="btn btn-warning">Clear</button>
    </div>
</form>